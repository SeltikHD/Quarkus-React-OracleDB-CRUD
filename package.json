{
  "name": "autoflex-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Autoflex - Monorepo for Backend (Quarkus) and Frontend (React)",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint:frontend": "cd frontend && bun run lint",
    "lint:backend": "cd backend && mvn spotless:check",
    "format:frontend": "cd frontend && bun run format",
    "format:backend": "cd backend && mvn spotless:apply",
    "test:frontend": "cd frontend && bun run test:e2e",
    "test:backend": "cd backend && mvn test",
    "build:frontend": "cd frontend && bun run build",
    "build:backend": "cd backend && mvn package -DskipTests"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "packageManager": "bun@1.3.5"
}
